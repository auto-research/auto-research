    <script>
      document.addEventListener('DOMContentLoaded', function () {
        const palette = {
          blue1: '#00449E',
          blue2: '#1976D2',
          blue3: '#42A5F5',
          blue4: '#90CAF9',
          grey: '#cbd5e1',
        };

        function wrapLabels(label, maxWidth) {
          const words = label.split(' ');
          let lines = [];
          let currentLine = words[0];

          for (let i = 1; i < words.length; i++) {
            if ((currentLine + ' ' + words[i]).length > maxWidth) {
              lines.push(currentLine);
              currentLine = words[i];
            } else {
              currentLine += ' ' + words[i];
            }
          }
          lines.push(currentLine);
          return lines;
        }

        const tooltipTitleCallback = (tooltipItems) => {
          const item = tooltipItems[0];
          let label = item.chart.data.labels[item.dataIndex];
          if (Array.isArray(label)) {
            return label.join(' ');
          }
          return label;
        };

        const defaultPlugins = {
          legend: {
            labels: {
              color: '#1e293b',
              font: {
                size: 14,
                family: "'Noto Sans SC', sans-serif",
              },
            },
          },
          tooltip: {
            callbacks: {
              title: tooltipTitleCallback,
            },
            bodyFont: {
              family: "'Noto Sans SC', sans-serif",
            },
            titleFont: {
              family: "'Noto Sans SC', sans-serif",
            },
          },
        };

        if (document.getElementById('usdDominanceChart')) {
          const usdCtx = document
            .getElementById('usdDominanceChart')
            .getContext('2d');
          new Chart(usdCtx, {
            type: 'doughnut',
            data: {
              labels: ['美元挂钩稳定币', '其他货币挂钩稳定币'],
              datasets: [
                {
                  label: '市场份额',
                  data: [98, 2],
                  backgroundColor: [palette.blue2, palette.blue4],
                  borderColor: ['#ffffff'],
                  borderWidth: 2,
                },
              ],
            },
            options: {
              responsive: true,
              maintainAspectRatio: false,
              plugins: defaultPlugins,
              cutout: '70%',
            },
          });
        }

        if (document.getElementById('regulationRadarChart')) {
          const radarCtx = document
            .getElementById('regulationRadarChart')
            .getContext('2d');
          new Chart(radarCtx, {
            type: 'radar',
            data: {
              labels: [
                '储备要求',
                '许可门槛',
                '支付利息 (越低越严)',
                '外来准入 (越高越开放)',
                '反洗钱强度',
              ],
              datasets: [
                {
                  label: '美国 (拟议)',
                  data: [4, 4, 1, 2, 5],
                  fill: true,
                  backgroundColor: 'rgba(66, 165, 245, 0.2)',
                  borderColor: palette.blue3,
                  pointBackgroundColor: palette.blue3,
                },
                {
                  label: '欧盟 (MiCA)',
                  data: [5, 5, 1, 2, 5],
                  fill: true,
                  backgroundColor: 'rgba(25, 118, 210, 0.2)',
                  borderColor: palette.blue2,
                  pointBackgroundColor: palette.blue2,
                },
                {
                  label: '香港',
                  data: [5, 5, 3, 4, 5],
                  fill: true,
                  backgroundColor: 'rgba(0, 68, 158, 0.2)',
                  borderColor: palette.blue1,
                  pointBackgroundColor: palette.blue1,
                },
              ],
            },
            options: {
              responsive: true,
              maintainAspectRatio: false,
              plugins: defaultPlugins,
              scales: {
                r: {
                  beginAtZero: true,
                  max: 5,
                  pointLabels: {
                    font: { size: 12, family: "'Noto Sans SC', sans-serif" },
                    color: '#334155',
                  },
                  ticks: {
                    stepSize: 1,
                    backdropColor: 'rgba(255, 255, 255, 0.75)',
                  },
                },
              },
            },
          });
        }

        if (document.getElementById('marketShareChart')) {
          const marketShareCtx = document
            .getElementById('marketShareChart')
            .getContext('2d');
          new Chart(marketShareCtx, {
            type: 'bar',
            data: {
              labels: ['当前全球份额', '立法后目标份额'],
              datasets: [
                {
                  label: '美国发行稳定币全球市场份额 (%)',
                  data: [30, 45],
                  backgroundColor: [palette.blue4, palette.blue2],
                  borderColor: [palette.blue3, palette.blue1],
                  borderWidth: 1,
                },
              ],
            },
            options: {
              indexAxis: 'y',
              responsive: true,
              maintainAspectRatio: false,
              scales: {
                x: {
                  beginAtZero: true,
                  max: 50,
                  grid: {
                    display: false,
                  },
                  ticks: {
                    color: '#475569',
                  },
                },
                y: {
                  grid: {
                    display: false,
                  },
                  ticks: {
                    color: '#475569',
                  },
                },
              },
              plugins: {
                ...defaultPlugins,
                legend: {
                  display: false,
                },
              },
            },
          });
        }
      });
    </script>
